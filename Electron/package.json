{
  "name": "librarian",
  "version": "0.0.40",
  "description": "The app that let's you search your thoughts.",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && electron .",
    "pack": "electron-builder --dir --publish never",
    "dist": "electron-builder --publish never"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm version patch --force -m 'Version update'"
    }
  },
  "repository": "https://github.com/cemheren/wanshitong",
  "keywords": [
    "10000",
    "Librarian",
    "Notes"
  ],
  "build": {
    "appId": "librarian",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "./icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "sign": false
    },
    "afterSign": "build/notarize.js",
    "win": {
      "verifyUpdateCodeSignature": false,
      "target": "NSIS",
      "icon": "./icon.png"
    },
    "extraFiles": [
      "server"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "https://allbuilds.blob.core.windows.net/wanshitong/downloads"
      }
    ]
  },
  "author": "Akif C Heren",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^7.1.5",
    "electron-builder": "^21.2.0",
    "electron-notarize": "^0.2.1",
    "husky": "^3.1.0",
    "quill": "^1.3.7"
  },
  "dependencies": {
    "@simonwep/pickr": "^1.4.7",
    "cropperjs": "^1.5.6",
    "dragselect": "^1.13.1",
    "electron-log": "^4.0.0",
    "electron-titlebar": "0.0.3",
    "electron-titlebar-windows": "^3.0.0",
    "electron-updater": "^4.2.0",
    "moment": "^2.24.0",
    "random-words": "^1.1.0",
    "request": "^2.88.0"
  }
}
